# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Common
[{*.json,*.yaml,*.yml}]
indent_size = 2

# Linux
[*.hwdb]
indent_size = 1

# Windows
[{*.ahk,*.ini,keymap.txt}]
end_of_line = crlf
[*.ahk]
charset = utf-8-bom
